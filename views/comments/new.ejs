<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add Your Comments to <%= campground.name %></h1>
    <div style="width:30%; margin: 30px auto;">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="textarea" name="comment[text]" placeholder="add comments..">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Save Madi!</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>